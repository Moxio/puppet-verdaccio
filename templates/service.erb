[Unit]
Description=Verdaccio
Wants=basic.target
After=basic.target network.target

[Service]
User=<%= @daemon_user %>
Group=<%= @daemon_user %>
WorkingDirectory=<%= @install_path %>
ExecStart=<%= @install_path %>/node_modules/verdaccio/bin/verdaccio
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=always

[Install]
WantedBy=multi-user.target
